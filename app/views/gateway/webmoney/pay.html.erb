<div class="middle_block">
  <div class="payment_content">
    <% form_for "pay", :url => @claim.currency_source.payment_system.parametrs[:url], :method => :post  do -%>
    <p><%= t('webmoney.pay.amount') %>: <%= @invoice.amount  %></p>
    <%= hidden_field_tag "LMI_PAYMENT_DESC_BASE64", [ t('webmoney.pay.description_payment')].pack("m") %>
    <%= hidden_field_tag "LMI_PAYMENT_NO", @claim.id %>
    <%= hidden_field_tag "LMI_PAYMENT_AMOUNT", @claim.summa %>     
    <%= hidden_field_tag "LMI_PAYEE_PURSE", @claim.currency_source.payment_system.parametrs[:payee_purse] %>
    <% if "development" == RAILS_ENV  -%>
    <%= hidden_field_tag "LMI_SIM_MODE",2  %>
    <% end -%>
    <p><%= submit_tag t('webmoney.pay.pay') %></p>
    <% end -%>
  </div>
</div>


