<div class="middle_block">
  <div class="payment_content">
    <% form_for "pay", :url => @claim.payment_system_source.parameters[:url], :method => :post  do -%>
    <h4>Обмен валюты</h4>
    <div><%= render :partial => 'gateway/shared/confirmed', :object => @claim %></div>
      
    <%= hidden_field_tag "LMI_PAYMENT_DESC_BASE64", ["Обмен интернет валют"].pack("m") %>
    <%= hidden_field_tag "LMI_PAYMENT_NO", @claim.md5 %>
    <%= hidden_field_tag "LMI_PAYMENT_AMOUNT", @claim.summa %>     
    <%= hidden_field_tag "LMI_PAYEE_PURSE", @claim.payment_system_source.parametrs[:payee_purse] %>
    <% if "development" == RAILS_ENV  -%>
    <%= hidden_field_tag "LMI_SIM_MODE",2  %>
    <% end -%>
    <p><%= submit_tag "Оплатить" %></p>
    <% end -%>
  </div>
</div>


